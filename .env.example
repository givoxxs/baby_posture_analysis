# FastAPI Settings
API_HOST=0.0.0.0
API_PORT=8000
RELOAD_ON_CHANGE=True
DEBUG=True
LOG_LEVEL=info

# API configuration
API_VERSION=1.0.0
API_TITLE=Baby Posture Analysis API
API_DESCRIPTION=API for baby posture analysis using MediaPipe

# MediaPipe Configuration
# Options: 0, 1, or 2
MODEL_COMPLEXITY=2
MIN_DETECTION_CONFIDENCE=0.5
# Used for video processing
MIN_TRACKING_CONFIDENCE=0.5

# Alert System Configuration
MODEL_PATH=./models/posture_model.pkl
CONFIDENCE_THRESHOLD=0.75

# Image Preprocessing
IMAGE_WIDTH=640
IMAGE_HEIGHT=480
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif

# Time Series (for video)
FPS=2
# Time threshold in seconds for dangerous posture detection
TIME_THRESHOLD=30

# Paths
UPLOAD_DIR=./uploads
PROCESSED_DIR=./processed
STATIC_DIR=./static
TEMPLATES_DIR=./templates
LOG_DIR=./logs

# CORS Settings
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# API Rate Limiting
RATE_LIMIT_PER_MINUTE=200
